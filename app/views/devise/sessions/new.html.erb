<div class="bg-gray-100 flex justify-center items-center  mb-28 rounded-lg">
    <!-- Left: Image -->

<!-- Right: Login Form -->
<div class="lg:p-36 md:p-52 sm:20 p-8 w-full lg:w-1/2">
  <h1 class="text-2xl font-semibold mb-4">Login</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <!-- Username Input -->
    <div class="mb-4">
      <%= f.label :email, class:"block text-gray-600" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500" %>
    </div>
    <!-- Password Input -->
    <div class="mb-4">
      <%= f.label :password, class:"block text-gray-600" %><br />
      <%= f.password_field :password, autocomplete: "password", class:"w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:border-blue-500" %>
      
    </div>
    <!-- Remember Me Checkbox -->
    <% if devise_mapping.rememberable? %>
    <div class="mb-4 flex items-center">
      <%= f.check_box :remember_me, class:"text-blue-500" %>
      <%= f.label :remember_me, class:"text-gray-600 ml-2" %>
    <% end %>
    </div>
   
  
    <!-- Login Button -->
    
     <%= f.submit "Log in", class:"bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-md py-2 px-4 w-full" %>
  </form>
  <!-- Sign up  Link -->
  <div class="mt-6 text-blue-500 text-center">
    <a href="#" class="hover:underline">Sign up Here</a>
  </div>
</div>
</div>
<%end%>
