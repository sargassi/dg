<% if params[:attribute] == 'description' %>
  <%= turbo_frame_tag :description do %>

    <%= render "form", product: @product %>
  <% end %>
<% elsif params[:attribute] == 'note' %>
  <%= turbo_frame_tag :note do %>

    <%= render partial: "products/form_note", locals: {product: @product} %>
  <% end %>

<% elsif params[:attribute] == 'color' %>
  <%= turbo_frame_tag :color do %>

    <%= render partial: "products/form_color", locals: {product: @product} %>
  <% end %>

<% end %>
