
<div class="hidden-pdf">
<p id="notice"><%= notice %></p>

<h1>Items</h1>
 <%= link_to "PDF", products_etichette_path(format: :pdf) %>

<%=
  link_to 'Download as Excel',
  products_path(format: :xlsx)
%>
<%=
  link_to 'Upload from Excel',
  new_products_import_path
%>
</div>

<div class="columns-3">
        <% i = 0 %>
       <% @products.each do |iz, val| %>
        <% if i == 0 %>

          <% val.each do |product| %>

             <% qty = product.qty.to_i %>
              <% qty.times do %>
                <div class="cell">
                <%= product.itemcode %> <%= product.fabricode %> <%= product.varcode %> <br>
                
                <%= raw(product.description.gsub(/\R+/, '<br/>')) %><br>
               
                tg <%= product.tg %><br>
                <%= product.color %><br>
                <%= product.materiale %>  
                </div>
            <% end %>

          <% end %>

        <% i += 1%>
    <% end %>
    <% end %>
</div>
