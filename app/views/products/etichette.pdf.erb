<div style="margin: 0 auto; width: 21.3cm; background: #fff ">
        <% counter = 0 %>
        <% i = 0 %>
       <% @products.each do |iz, val| %>
        <% if i == 0 %>
          <% val.sort.each do |product| %>

             <% qty = product.qty.to_i %>
              <% qty.times do %>
                <div style="width: 33%!important; min-width: 7cm; height: 3.6cm!important; margin:0; display:inline-block ;position: relative; overlfow:auto">
                  <div style="text-align:left; font-size: 8.65pt; line-height:10.4pt;margin: 0; width: 6.2cm; min-width: 6.2cm; height: 2.8cm; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                    <%= product.itemcode %> <%= product.fabricode %> <%= product.varcode %>
                    <p>
                      <%= raw(product.description.gsub(/\R+/, '<br/>')) %></p>

                    <p>tg <%= product.tg %></p>
                <%= product.color %><br>
                <%= product.materiale %>
                </div>
                <% counter = counter + 1 %>
                </div>
                <% if counter.modulo(24) == 0 %>
                <div style="clear:both; page-break-after: always;"></div>
                <% end %>
            <% end %>

          <% end %>

        <% i += 1 %>
    <% end %>
    <% end %>
</div>
