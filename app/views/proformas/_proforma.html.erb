<div id="<%= dom_id proforma %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Customer:</strong>
    <%= proforma.customer %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Data in:</strong>
    <%= proforma.data_in %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Data out:</strong>
    <%= proforma.data_out %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Closed:</strong>
    <%= proforma.closed %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Note:</strong>
    <%= proforma.note %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this proforma", proforma, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this proforma", edit_proforma_path(proforma), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
