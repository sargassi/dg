  </div>
  

  <div class="form-group w-2/10">
    <%= form.label :paginea, 'Num pagine' %>
    <%= form.text_field :paginea, class:"border-slate-300 p-2 w-full", placeholder:".." %>
</div>

  <div class="form-group w-2/10">

    <%= form.label :pagine, 'Da' %>
    <%= form.text_field :pagine, class:"border-slate-300 p-2 w-full", placeholder:".." %>
    
  </div>



