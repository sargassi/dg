      <div class="form-group">

    <%= form.label :paese %>
    <%= form.select(:paese, ['Italia', 'Estero', 'Francia', 'UK', 'USA', 'Germania', 'Giappone', 'Cina', 'Spagna'], {}, { :class => 'border-slate-300 p-2 w-full' }) %>
  </div>
    <div class="form-group w-25">

    <%= form.label :medium %>
    <%= form.select(:medium, ['Web', 'Settimanale', 'Mensile', 'Quotidiano', 'Blog'], {}, { :class => 'border-slate-300 p-2 w-full' }) %>
  </div>
    

    <div class="form-group w-25">

    <%= form.label :giornalista %>
    <%= form.text_field :giornalista, class:"border-slate-300 p-2 w-full" %>
  </div>

   <div class="form-group w-25">

    <%= form.label :fotografo %>
    <%= form.text_field :fotografo, class:"border-slate-300 p-2 w-full" %>
  </div>

   <div class="form-group w-25">
    <%= form.label :photo %>
    <%= form.file_field :photo, class:"border-slate-300 p-2 w-full" %>
    <%= form.hidden_field :photo_cache %>

    <% if @rassegna["photo"].present? %>
    <a href="<%= @rassegna.photo %>" target="_blank" class="btn btn-sm" >PDF</a>
    
    <% end %>
  </div>
</div>
<div>
