    <%= form.label :tipologia %>
    <%= form.select(:tipologia, ['articolo', 'trafiletto', 'segnalazione', 'copertina', 'reportage', 'libro', 'video'], {}, { :class => 'border-slate-300 p-2 w-full' }) %>

  </div>
  

    <div class="form-group">

    <%= form.label :data %>
    <%= form.date_field :data, class:"border-slate-300 p-2 w-full" %>
