<div id="<%= dom_id station %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= station.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Note:</strong>
    <%= station.note %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this station", station, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this station", edit_station_path(station), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
