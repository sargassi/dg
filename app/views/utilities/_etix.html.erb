  <% i = 0 %>

    <% @etigroup.each do |craete, val| %>

      <%  date = val.first.created_at if val.first.created_at.present?  %>

        <% if i == 0 %>

          <h5 class="mr-4  text-blue-900 text-xl">Ultimo inserimento - <%= date.strftime('%d-%m-%Y') if defined?(date) %></h5>

        <div class="columns-3 my-8">


          <% val.sort.each do |product| %>
            <% product.note.present? ? notez = 'notez' : notez = '' %>
            <% qty = product.qty.to_i %>
            <% qty.times do %>

              <div class="cell w-full h-52 py-4 overflow-hidden relative border border-slate-700 mb-4 <%= notez %>">

                <p>
                <%= product.itemcode %> <%= product.fabricode %><%= product.varcode %>
                </p>

                <%= turbo_frame_tag :description do  %>
                  <div class="flex justify-between">
                    <span class="leading-tight h-8 block"><%= raw(product.description.gsub(/\R+/, '<br/>')) %> </span> <%= link_to 'modifica', [:edit, product, attribute: :description ], class:"no-pdf text-end text-xs uppercase text-blue-500 font-bold" %>
                  </div>
                <% end %>

                <p> tg <%= product.tg %><p>
                <%= product.color %><br>
                <%= product.materiale %>
                <br>
                <%= turbo_frame_tag :note do  %>
                <% if notez == '' %>
                  <%= link_to 'Aggiungi nota', [:edit, product, attribute: :note ], class:"no-pdf text-end text-xs uppercase text-blue-500 font-bold absolute right-4 bottom-4" %>
                <% else %>
                   <p> <%= product.note %> </p>
                <% end %>
                <% end %>

              </div>
            <% end %>

          <% end %>
        </div>
        <% i +=1 %>
    <% end %>
    <% end %>
